<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="layoutPage">
        <div class="header">
            <a href="/">
                <img src="~/Content/themes/base/images/Alem.png" alt="" style="margin: 0px 20px 0px 0px; display: inline; float: left; width: 495px;" />
            </a>
            <div class="TopRightLinks">
                <a class="active" href ="@Url.Action("Index", "Home")">HOME</a> |
                    <a href ="@Url.Action("Index", "About")">ABOUT</a> |
                    <a href ="@Url.Action("Index", "Work")">WORK</a> |
                    <a href ="@Url.Action("Index", "Contact")">CONTACT</a>
            </div>
            <div class="dailyquotes">
                <blockquote id="qod-quote">
                <p class="qod-text">
                 Keep it simple, stupid!
                 </p>
                 <p class="qod-author">
                  <a href="http://quotesondesign.com/?p=194">
                     &mdash; Old Saying
                  </a>
                 </p>
                </blockquote>
            </div>
        </div>
        <div class="navigationbar">
            <ul id="navlinks" class="mainlinks">   
                <li id="sub_0_4"><a href="@Url.Action("Index", "Contact")">Contact Me</a></li>                    
                <li id="sub_0_5"><a href="@Url.Action("Index", "Blog")">Side Projects</a></li>
                <li id="sub_0_3"><a href="@Url.Action("Index", "Resume")">My Resume</a></li>
                 <li id="sub_0_2"><a href="@Url.Action("Index", "Work")">Code Sample</a></li>
                <li id="sub_0_1"><a href="@Url.Action("Index", "About")">About Me</a></li>
                            
            </ul>
        </div>
        <div class="ready">
            @RenderBody()
        </div>
        <div class="floatfix"></div>
        <div class="footer">
            <div class="column" style="width: 310px;">
                <p>Designed by <a href="google.com">AlemShewit</a> © @DateTime.Now.Year. All rights reserved.</p>
            </div>
            <div class="column" style="width: 270px;">
                <a href="https://www.facebook.com/alemshewitt">
                    <img src="~/Content/themes/base/images/Icons/facebook.png" alt="" style="width: 30px;" /></a>
                <a href="mailto:alemshewit.a@gmail.com?Subject=Hello%20Alem" target="_top">

                    <img src="~/Content/themes/base/images/Icons/gmail.png" alt="" style="width: 30px;" /></a>
                <a href="https://www.linkedin.com/pub/alemshewit-weldearegay/75/167/b0b">
                    <img src="~/Content/themes/base/images/Icons/linkedin.png" alt="" style="width: 30px;" /></a>
                <a href="https://twitter.com/followers">
                    <img src="~/Content/themes/base/images/Icons/twitter.png" alt="" style="width: 30px;" /></a>
                <a href="https://plus.google.com/u/0/105643401203186360202/posts">
                    <img src="~/Content/themes/base/images/Icons/google_plus.png" alt="" style="width: 30px;" /></a>
                <a href="https://github.com/Alemshewit">
                    <img src="~/Content/themes/base/images/Icons/github.png" alt="" style="width: 30px;" /></a>
            </div>
            <div class="addthis">
                <a class="active" href ="@Url.Action("Index", "Home")">HOME</a> |
                    <a href ="@Url.Action("About", "Home")">ABOUT</a> |
                    <a href ="@Url.Action("Work", "Home")">WORK</a> |
                    <a href ="@Url.Action("Contact", "Home")">CONTACT</a>
            </div>
            <div class="floatfix">
            </div>
        </div>
    </div>

    <script src="http://quotesondesign.com/api/3.0/api-3.0.js" 
type="text/javascript" charset="utf-8"></script>
    
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
